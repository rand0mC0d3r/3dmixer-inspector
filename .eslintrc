{
  "extends": "eslint:recommended",
  "rules": {
    "react/jsx-indent-props": [2, 2],
    "semi": [2, "always"],
    "no-console": "off"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "AFRAME": true,
    "ga": true,
    "THREE": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "modules": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
     }
  },
  "plugins": [
    "react"
  ]
}
